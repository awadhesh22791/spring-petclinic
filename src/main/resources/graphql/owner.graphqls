type Owner {
	id: ID
	firstName: String
	lastName: String
	address: String
	city: String
	telephone: String
	pets:[Pet]!
}

input OwnerFilter{
	id: ID
	firstName: String
	lastName: String
	address: String
	city: String
	telephone: String
}
type Query {
	owners(owner:OwnerFilter!,page:Int,size:Int):[Owner!]
}

type Mutation {
  newOwner(firstName: String!, lastName: String!,address:String,city:String,telephone:String) : Owner!
}
